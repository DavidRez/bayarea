.menu-links(:class='{ "menu-links--light": light, "menu-links--stacked": stacked }' role='menu')
  .menu-links__link-container(v-for='(link, i) in props'
    :key='`${i}`'
    role='menuitem')
    nuxt-link.menu-links__link(
      :class='{ "menu-links__link--active": $route.path.includes(link.path) && link.path !== "/", "menu-links__link--active": $route.path === link.path, "menu-links__link--active": $route.path === link.path || (link.path.includes("events") && $route.path.includes(link.path)) || (link.path.includes("blog") && $route.path.includes(link.path))}'
      :to='{ path: link.path, hash: link.hash }'
      v-html='link.name'
      @click.native='[closeDrawer(), top()]'
      @keyup.enter='[closeDrawer(), top()]'
      role='menuitem')