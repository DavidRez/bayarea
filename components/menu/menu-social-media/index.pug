.menu-social-media(:class='{ "menu-social-media--light": light }')
  .menu-social-media__title(v-if='title') {{ title }}
  .menu-social-media__links(v-if='props')
    a.menu-social-media__link(v-for='(social, k) in props', :key='`social-${k}`', :href='social.href', target='_blank'  role='link' :aria-label='`${social.account} icon opens new tab`' @click='toggleMenu()' @keyup.enter='toggleMenu()' tabindex='0')
      BaseIcon.menu-social-media__icon(:name='social.account')
